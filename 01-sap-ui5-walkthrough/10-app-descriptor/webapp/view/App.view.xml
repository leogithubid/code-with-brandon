<!-- load mvc and place a text control 
     link to controller is added with controllerName -->
<mvc:View xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          controllerName="sap.ui.demo.walkthrough.controller.App">
        <Button text="{i18n>showHelloButtonText}" press=".onShowHello"></Button>
<!-- Add input field and bind it with JSON Model -->
<Input  value="{/recipient/name}"
        description="Hello {/recipient/name}"    
        valueLiveUpdate="true"
        width="60%"/>
</mvc:View>